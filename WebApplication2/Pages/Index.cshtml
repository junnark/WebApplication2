@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <table class="text-lg-right" style="font-size: medium; font-weight: bolder; padding-left: 20px; padding-right: 20px;">

        @foreach (var item in Model.SortedNodeList)
        {
            <tr>  
                @for (int i = 0; i < item.HierarchyLevel; i++)
                {
                    <td>-</td>
                }
                
                <td>@item.ParentId</td>
                <td>@item.NodeId</td>
                <td>@item.NodeName</td>
            </tr>
        }

    </table>
</div>
